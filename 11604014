#include <stdio.h>
#include <sys/types.h>
#include <unistd.h>
int main()
{
	int i=0;
	int j=0;
	pid_t  pid;
	do
		{
			printf("\n enter any number greater than 0"); 
  			scanf("%d", &j);	
		}
		while (j <= 0);
		pid = fork();
		if(pid==0)
	{
			printf("\n Child proccess is working");
			printf("%d\n",j);
			while (j!=1)
			{
				if (j%2 == 0)
				{
					j = j/2;
				}
				else if (j%2 == 1)
				{
					j = 3 * (j) + 1;
				}	
			
				printf("%d\n",j);
			}

			printf("\n Child process is done");
		}
		else
		{
			printf("\n Parents is waiting on child process");
			wait();
